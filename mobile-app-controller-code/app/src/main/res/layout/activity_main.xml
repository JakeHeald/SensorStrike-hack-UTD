<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/base_background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world"
        android:id="@+id/out"
        android:textSize="0sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/quit"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="QUIT"
        android:textColor="#efefef"
        android:padding="10dp"/>

    <Button
        android:id="@+id/delta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:text="Delta"
        android:textStyle="bold"
        android:background="@drawable/circle"
        android:elevation="20dp"
        android:textColor="#efefef"
        android:padding="10dp"/>

    <Button
        android:id="@+id/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:text="R"
        android:textStyle="bold"
        android:background="@drawable/circle"
        android:elevation="20dp"
        android:textColor="#efefef"
        android:padding="10dp"/>

    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick"
        android:layout_width="@dimen/base_size"
        android:layout_height="@dimen/base_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_base">

        <!-- You may use any View here. -->

        <Button
            android:layout_width="@dimen/stick_size"
            android:layout_height="@dimen/stick_size"
            android:background="@drawable/bg_stick" />

    </com.jmedeisis.bugstick.Joystick>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:id="@+id/anchor"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <TextView
        android:layout_above="@id/anchor"
        android:gravity="center"
        android:text="W"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#EFEFEF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"/>

    <TextView
        android:layout_toLeftOf="@id/anchor"
        android:gravity="center"
        android:text="A"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#EFEFEF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="110dp"/>

    <TextView
        android:layout_below="@id/anchor"
        android:gravity="center"
        android:text="S"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#EFEFEF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"/>

    <TextView
        android:layout_toRightOf="@id/anchor"
        android:gravity="center"
        android:text="D"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#EFEFEF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"/>

</RelativeLayout>
